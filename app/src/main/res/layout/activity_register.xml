<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.eka.resafood.Activity.RegisterActivity">
    <LinearLayout
        android:weightSum="10"
        android:layout_weight="1.7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/register_back"
            android:src="@drawable/ic_action_back"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_weight="8.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="회원가입"
                android:textSize="33sp"
                android:textColor="#444"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                android:text="Sign up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.6"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:gravity="left|center"
            android:text="이메일"
            android:textColor="#626262"
            android:textSize="19sp"
            android:layout_weight="3.3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:weightSum="10"
            android:gravity="center"
            android:layout_weight="6.7"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_weight="3.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <EditText
                android:id="@+id/register_email"
                android:paddingLeft="10dp"
                android:layout_weight="3.5"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:inputType="textEmailAddress"
                android:hint="  exam@edcan.kr"
                android:layout_marginRight="17dp"
                android:background="@drawable/round_white"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:textSize="13sp"
                android:layout_weight="3"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:alpha="70"
                android:text="*자주 사용하는 이메일을 입력하세요."
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.6"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:gravity="left|center"
            android:text="비밀번호"
            android:textColor="#626262"
            android:textSize="19sp"
            android:layout_weight="3.3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:weightSum="10"
            android:gravity="center"
            android:layout_weight="6.7"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_weight="3.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <EditText
                android:maxLength="16"
                android:id="@+id/register_password"
                android:paddingLeft="10dp"
                android:layout_weight="3.5"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:hint=" *********"
                android:layout_marginRight="17dp"
                android:background="@drawable/round_white"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:layout_weight="3"
                android:textSize="13sp"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:alpha="70"
                android:text="*8~16자 영문과 숫자를 혼용해서 만드세요."
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.6"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:gravity="left|center"
            android:text="비밀번호 확인"
            android:textColor="#626262"
            android:textSize="19sp"
            android:layout_weight="3.3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:weightSum="10"
            android:gravity="center"
            android:layout_weight="6.7"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <EditText
                android:maxLength="16"
                android:id="@+id/register_check_password"
                android:paddingLeft="10dp"
                android:layout_weight="3.5"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:inputType="textPassword"
                android:hint=" *********"
                android:layout_marginRight="17dp"
                android:background="@drawable/round_white"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:weightSum="10">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="3.3"
            android:gravity="left|center"
            android:text="이름"
            android:textColor="#626262"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.7"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

            <EditText
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="17dp"
                android:layout_weight="4"
                android:background="@drawable/round_white"
                android:hint=" 홍길동"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_weight="1.1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_weight="1.01"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/cancel"
            android:background="#206aef"
            android:text="취소"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/register"
            android:background="#206aef"
            android:text="회원가입하기"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
