<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eka.resafood">

    <application
        android:allowBackup="true"
        android:icon="@drawable/resafood_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/resafood_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.TutorialActivity"
            android:theme="@style/NoStatusBar" />
        <activity android:name=".Activity.RegisterActivity" />
        <activity android:name=".Activity.TermsActivity"
            android:theme="@style/NoStatusBar" />
        <activity android:name=".Activity.FirstScreenActivity"
            android:theme="@style/NoStatusBar" />

    </application>

</manifest>